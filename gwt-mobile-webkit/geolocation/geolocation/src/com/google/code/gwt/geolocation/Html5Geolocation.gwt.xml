<module>
  <inherits name="com.google.gwt.core.Core" />
  <inherits name="com.google.gwt.user.UserAgent" />

  <!-- Define a property which identifies the Geolocation API to use -->
  <define-property name="geolocation.api" values="html5,gears" />

  <!-- Property provider which identifies the Geolocation API to use -->
  <property-provider name="geolocation.api"><![CDATA[
    // Native HTML5 API
    if (!!navigator.geolocation
         && (typeof navigator.geolocation.getCurrentPosition == "function")) {
      return "html5";
    }
    
    // Firefox
    if (typeof GearsFactory != "undefined") {
      return "gears";
    } else {
      // IE
      try {
        new ActiveXObject("Gears.Factory");
        return "gears";
      } catch (e) {
        // Safari
        if ((typeof navigator.mimeTypes != "undefined")
             && navigator.mimeTypes["application/x-googlegears"]) {
          return "gears";
        }
      }
    }
    
    return "html5";
  ]]></property-provider>

  <replace-with class="com.google.code.gwt.geolocation.client.GeolocationImplGears">
    <when-type-is class="com.google.code.gwt.geolocation.client.GeolocationImpl" />
    <when-property-is name="geolocation.api" value="gears" />
  </replace-with>
</module>
