<module>
  <inherits name="com.google.gwt.core.Core" />
  <inherits name="com.google.gwt.user.UserAgent" />

  <!-- Define a property which answers true if Gears is to be used -->
  <define-property name="use.gears.geolocation" values="false,true" />

  <!-- Property provider which answers true if Gears is to be used -->
  <property-provider name="use.gears.geolocation"><![CDATA[
    // Native Geolocation API takes precedence over Gears API (any browser)
    if (typeof navigator.geolocation != 'undefined') {
      return "false";
    }
    
    // Firefox
    if (typeof GearsFactory != 'undefined') {
      return "true";
    }

    try {
      // IE
      new ActiveXObject('Gears.Factory');
      return "true";
    } catch (e) {
      // Safari
      if ((typeof navigator.mimeTypes != 'undefined')
           && navigator.mimeTypes["application/x-googlegears"]) {
        return "true";
      }
    }

	return "false";
  ]]></property-provider>

  <!--
  	Gears' required JavaScript initialization code.
  -->
  <script src="gears_init.js" />

  <replace-with class="com.google.code.gwt.geolocation.client.GeolocationImplGears">
    <when-type-is class="com.google.code.gwt.geolocation.client.GeolocationImpl" />
    <when-property-is name="use.gears.geolocation" value="true" />
  </replace-with>
</module>
